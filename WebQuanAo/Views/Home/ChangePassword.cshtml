@using WebQuanAo.Models;
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    account acc = ViewBag.acc;
}
<link rel="stylesheet" href="~/Content/style-ChangePassword.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">

<div class="change-password mt-5 animated fadeInLeft">
    <h4 class=" mb-4">Đổi Mật Khẩu</h4>
    <form action="">
        <label class="lbl_txt" for="">Mật Khẩu Cũ</label> <br>
        <input class="mb-2" type="password" name="" id="iPassO" value=""> <br>
        <label class="lbl_txt" for="">Mật Khẩu Mới</label> <br>
        <input class="mb-2" type="password" name="" id="iPass" value=""> <br>
        <label class="lbl_txt" for="">Xác Nhận Mật Khẩu Mới</label> <br>
        <input class="mb-2" type="password" id="iPass1" value=""><br>
        <input type="button" class="mt-3 mb-5" value="Đổi" onclick="save()">
    </form>
</div>

<script>
    function save() {
        var iPass = document.getElementById("iPass").innerHTML || document.getElementById("iPass").value;
        var iPass1 = document.getElementById("iPass1").innerHTML || document.getElementById("iPass1").value;
        var iPass0 = document.getElementById("iPassO").innerHTML || document.getElementById("iPassO").value;
        if (iPass0 != "@acc.password") {
            alert('Pass cũ không đúng!');
        }else if (iPass == "") {
            alert('Pass khôngs được để trống!');

        } else if (iPass != iPass1) {
            alert('Xác Nhận Mật Khẩu Mới không trùng với mật khẩu mới!!');
        } else {

            location.href = window.location.protocol + "//" + window.location.host + "@Url.Action("SavePass")?id=@acc.id&pass=" + iPass;
        }
    }
</script>


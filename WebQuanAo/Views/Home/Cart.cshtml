@using WebQuanAo.Models;
@using WebQuanAo.Controllers;
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<GioHang> cart = ViewBag.Cart;
    List<product> product = ViewBag.product;
    decimal totalPrice = 0;
}
<link rel="stylesheet" href="../Content/style-Cart.css">

<div class="productName d-block pt-1 mt-4">Cart</div>
<div class="overflow-x:auto">
    <table class="table table-dark table-striped mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ảnh</th>
                <th scope="col">Tên Sản Phẩm</th>
                <th scope="col">Size</th>
                <th scope="col">Số Lượng</th>
                <th scope="col">Giá</th>
                <th scope="col">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < cart.Count; i++)
            {
                product p = @product.FirstOrDefault(x => x.id == cart[i].id);
                totalPrice += (decimal) (cart[i].price * cart[i].count);
            <tr>
                <th id="num" scope="row">@(i+1)</th>
                <td><img class="" src="@p.srcImage" alt=""></td>
                <td>@product.Find(x => x.id == cart[i].id).name</td>
                <td>@cart[i].size</td>
                <td><input type="number" name="" id="" min="1" placeholder="0" value="@cart[i].count"></td>
                <td>@string.Format("{0:#,##0.00}", @cart[i].price * @cart[i].count).Replace(".00", String.Empty) đ</td>
                <td><a href="@Url.Action("Cart")?id=@i">Xóa</a></td>
            </tr>
            }
        </tbody>
    </table>
    <div class="buy">Tổng: @string.Format("{0:#,##0.00}", @totalPrice).Replace(".00", String.Empty) đ</div>
    <div class="buy mt-4 mb-5">Thanh Toán</div>
</div>


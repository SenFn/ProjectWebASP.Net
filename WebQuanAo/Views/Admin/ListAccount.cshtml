
@{
    ViewBag.Title = "ListAccount";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="../Content/style-ListAccount.css">
<div class="Content">
    <!-- Đây Là Chỗ Để Render Body Khi Quăng Vào MVC -->
    <!-- Nó Sẽ Thay Đổi Dựa Theo Người Dùng Muốn Click Coi Gì -->
    <div class="container-fluid">
        <div class="row">
            <div class="Home col-lg-2 col-md-3 col-sm-5 col-10 fw-bold my-2 mx-3">Danh Sách Tài Khoản</div>
        </div>
        <div class="dropdown listsearch mb-3 mt-3">
            Tìm Kiếm theo:
            <button class="btn btnlistsearch dropdown-toggle ml-1" type="button" id="dropdownListSearch" data-bs-toggle="dropdown" aria-expanded="false">
                Tên Tài Khoản
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownListSearch">
                <li><a class="dropdown-item" href="#" onclick="document.getElementById('dropdownListSearch').innerHTML = 'Tên Tài Khoản'">Tên Tài Khoản</a></li>
                <li><a class="dropdown-item" href="#" onclick="document.getElementById('dropdownListSearch').innerHTML = 'Email'">Email</a></li>
                <li><a class="dropdown-item" href="#" onclick="document.getElementById('dropdownListSearch').innerHTML = 'Khu vực'">Khu Vực</a></li>
                <li><a class="dropdown-item" href="#" onclick="document.getElementById('dropdownListSearch').innerHTML = 'Admin'">Admin</a></li>
                <li><a class="dropdown-item" href="#" onclick="document.getElementById('dropdownListSearch').innerHTML = 'User'">User</a></li>
            </ul>
            <form class="d-inline-flex ms-3">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btnsearch" type="submit">Search</button>
            </form>
        </div>
    </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên Tài Khoản</th>
                <th scope="col">Email</th>
                <th scope="col">Số Điện Thoại</th>
                <th scope="col">Khu Vực</th>
                <th scope="col">Loại Tài Khoản</th>
                <th scope="col">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>qwe</td>
                <td>abc@gmail.com</td>
                <td>123</td>
                <td>Ho Chi Minh</td>
                <td>Admin</td>
                <td>
                    <a href="#">Chỉnh Sửa</a>
                    <a class="ml-1" href="#">Xóa</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

